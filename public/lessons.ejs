<div class="span10">
  <h1>ברוכים הבאים!</h1>
  <br>
</div>

</div>
<br>
<% for(var key in public.lessons._data) {%>
  <% var lesson =  public.lessons._data[key]%>

  <div class="well container">
    <div class="row">
      <div class="span9">
        <a href="<%= lesson.url %>"><h1><%= lesson.title %></h1></a>
        <h3><%= lesson.description %></h3>
        <br>
        <div>
          <span class="badge badge-success">נכתב ב</span>
          <br><br>
          <div>
            <% for(var tag in lesson.tags) {%>
              <span class="label label-info"><%= lesson.tags[tag] %></span>
            <% } %>
          </div>
        </div>
      </div>
      <div class="span3" style="vertical-align: middle">
        <img src="<%= lesson.url %>/thumbnail.png" height="140" width="140">
      </div>
    </div>
  </div>

<% } %>



